{
  "restartable": "rs",
  "ignore": [".git", "node_modules/**/node_modules", "/src/captures/*"],
  "verbose": true,
  "execMap": {
    "js": "node --harmony",
    "mjs": "node --harmony"
  },
  "events": {
    "restart": "node --harmony"
  },
  "watch": ["bin/*", "src/*"],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js,mjs"
}
